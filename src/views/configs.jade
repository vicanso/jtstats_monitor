extends ./layout


block bodyContainer
  include ./menu
  #contentContainer
    include ./header
    .pageContainer.statsConfigs
      .panel.panel-default
        .panel-heading Configs
        .panel-body
          p 可以通过各种配置的组合，生成自定义的统计分析
        table.table
          thead: tr
            th name
            th stats
            th type
            th date
            th interval
            th op
          tbody
            each config in viewData.configs
              tr(data-id='#{config._id}')
                td #{config.name}
                td #{JSON.stringify(config.stats)}
                td #{config.type}
                td start:#{config.date.start}, end:#{config.date.end}
                td #{config.point.interval}
                td
                  .btn-group
                    a.btn.btn-default.preview(title='预览', href='javascript:;')
                      span.glyphicon.glyphicon-play
                    a.btn.btn-default.add(title='添加/删除', href='javascript:;')
                      span.glyphicon.glyphicon-plus

                    //- a.btn.btn-default.preview 预览
                    //- a.btn.btn-default.add 添加

      .chartViewContainer.hidden
        .panel.panel-default
          .panel-heading
            h3.panel-title
              a.glyphicon.glyphicon-remove.close(href='javascript:;')
              | 预览
          .panel-body loading...

      .statsTemplateConfig
        .panel.panel-default
          .panel-heading
            h3.panel-title 统计配置
          .panel-body
            .row
              .col-xs-4: .config
                .name PV
                .desc 统计当前月的PV量
                .btn-group.viewWidth
                  button.btn.btn-default.widthSelect.disabled 显示区域
                  button.btn.btn-default.selected(type='button', title='占图表区域1/3')
                    span.glyphicon.glyphicon-align-left
                  button.btn.btn-default(type='button', title='占图表区域1/2')
                    span.glyphicon.glyphicon-align-center
                  button.btn.btn-default(type='button', title='占图表区域2/3')
                    span.glyphicon.glyphicon-align-right
                  button.btn.btn-default(type='button', title='占满图表区域')
                    span.glyphicon.glyphicon-align-justify

  - fileImporter.import(['/javascripts/configs.js', '/stylesheets/configs.css']);

