extends ./layout

block bodyContainer
  #configsContainer
    include ./header
    .container-fluid: .row
      include ./slider
      .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.mainContainer
        h1.page-header Configs

        .panel.panel-default: table.table.table-bordered
          thead: tr
            th name
            th type
            th date
            th interval
          tbody
            each config in viewData.configs
              tr
                td #{config.name}
                td #{config.type}
                td start:#{config.date.start}, end:#{config.date.end}
                td #{config.point.interval}


  - fileImporter.import(['/javascripts/configs.js', '/stylesheets/configs.css']);

