@import 'nib'
@import './common'

#contentContainer
  margin-left $MENU_WIDTH
  .statsConfigs
    margin 15px
    $templateConfigHeight = 150px
    padding-bottom $templateConfigHeight
    .header
      margin 15px 0
      border-bottom 1px solid $BORDER_COLOR
    .chartViewContainer
      position fixed
      z-index 1
      left 50%
      top 50%
      width 700px
      height 400px
      margin-left -(@width / 2)
      margin-top -(@height / 2)
      .close
        float right
        font-size 16px
        font-weight normal
      .chartView
        height 350px
    .statsTemplateConfig
      position fixed
      left $MENU_WIDTH + 15
      bottom 5px
      right 15px
      height $templateConfigHeight
      background-color #fff
      .panel-body
        height $templateConfigHeight - 40px
        overflow scroll
        .config
          border 1px solid #eee
          border-left 3px solid #d9534f
          border-radius 3px
          padding 5px 15px
          position relative
          .name
            position absolute
            right 0
            top 0
            border-left 1px solid #eee
            border-bottom 1px solid #eee
            padding 1px 15px
            background-color #f7f7f9
            color #d44950
          .viewWidth
            margin 10px 0
            .btn
              &:first-child
                opacity 1
              &.selected
                color #d44950
