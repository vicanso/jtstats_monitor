@import 'nib'
@import './common'
// body
//   visibility hidden
#contentContainer
  margin-left $MENU_WIDTH

  .StatsConfigs
    margin 15px
    .configContainer
      margin-bottom 30px
      > div
        height 300px
        padding 4px
        border-radius 4px
        border 1px solid $BORDER_COLOR
        background-color #f7f7f9
      .title
        background-color #1f2025
        color #fff
        margin 0
        padding 5px 10px
      .notFilled
        border 1px solid #d43f3a
    .typeList
      margin 10px 0
      padding 0
      list-style none
      line-height 32px
      li
        padding 0 10px
        cursor pointer
        width 50%
        float left
        &:hover
          color #fff
          background-color #3f9dd9
          .checkIcon
            border-color #f0f0f0
        &.selected
          .checkIcon
            .glyphicon
              visibility visible
        .checkIcon
          display inline-block
          position relative
          top 9px
          margin-right 8px
          border-radius 3px
          width 12px
          height @width
          border 1px solid #5c5e74
          color #222
          .glyphicon
            visibility hidden
            color #df3f31
            top -9px

    .dateConfig, .statsConfig, .result
      > *
        margin 15px
    .statsConfig
      .btn-group
        display block
        .btn
          width 33.33%
      .add, .remove
        display block
    .result
      .btn
        display block


    .chartView
      height 300px
      margin 15px

  .statsConfigs
    line-height 28px
    margin 20px 0
    .row
      margin 20px 0
    .notFilled
      border 1px solid #d43f3a
    .header
      margin 15px
      border-bottom 1px solid $BORDER_COLOR
    .statsItem
      line-height 30px
      .name
        float left
        font-size 16px
    $statsCategoryWidth = 230px
    .statsCategory
      .edit
        display none
    .statsType
      .btn-group
        display block
        margin-left 90px
    .intervalSelector
      .selector
        margin-left 80px
    .dateSelector, .timeSelector
      padding 0
    .datePickerContainer
      margin-left 88px
    .commonDateSelector .edit
      display none
    .statsConfig
      margin-left 75px
      margin-right 50px
    .addConfig, .removeConfig
      float right
      background-color #eee
      border 1px solid $BORDER_COLOR
      padding 0 8px
      border-radius 3px
      color #6a6b70
      &:hover
        color #333
    .functions
      .btn
        display block
    .desc, .result
      margin 0 15px
    .chartView
      height 300px
      margin 15px
      
  